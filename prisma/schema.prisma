datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

generator client {
  provider = "prisma-client-js"
}

model Product {
  id          Int      @id @default(autoincrement())
  name        String
  description String?
  price       Float
  image       String?
  stock       Int      @default(0)
  createdAt   DateTime @default(now())
}

model Order {
  id        Int      @id @default(autoincrement())
  items     Json
  total     Float
  createdAt DateTime @default(now())
}
